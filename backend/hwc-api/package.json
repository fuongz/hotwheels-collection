{
	"name": "hwc-api",
	"type": "module",
	"scripts": {
		"auth:generate": "cf-script ./scripts/generate-better-auth-schemas.ts",
		"dev": "wrangler dev --port 8788",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"local:secrets:create": "wrangler secrets-store secret create ef976ac39100478aba6557b43644d595 --scopes workers --persist-to ./.wrangler/state",
		"db:seed": "cf-script ./scripts/seed-collection-lookups.ts"
	},
	"dependencies": {
		"@better-fetch/fetch": "^1.1.21",
		"@hono/zod-validator": "^0.7.6",
		"better-auth": "^1.4.10",
		"cloudinary": "^2.8.0",
		"dayjs": "^1.11.19",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.3",
		"nanoid": "^5.1.6",
		"parse5": "^8.0.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"cf-script": "^0.2.1",
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^25.0.6",
		"drizzle-kit": "^0.31.8",
		"wrangler": "^4.58.0"
	}
}
